<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/linearLayout">
    <ImageView
            android:layout_height="0dp" app:srcCompat="@drawable/welcome" android:id="@+id/Wallpaper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_width="409dp" android:scaleType="fitXY"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="2.25in"
            android:layout_height="532dp" android:id="@+id/Card" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible" tools:visibility="visible" android:background="#673AB7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:circularflow_defaultRadius="5in">
        <TextView
                android:text="Welcome To The Game!"
                android:layout_width="408dp"
                android:layout_height="wrap_content" android:id="@+id/Title"
                android:textAlignment="center" android:textSize="34sp"
                android:textColor="#FFFFFF" android:fontFamily="@font/bowlby_one_sc"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="67dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="335dp"/>
        <TextView
                android:text="Please Enter Your Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Name" android:textAlignment="center"
                android:textSize="24sp" android:background="#00FFFFFF"
                android:fontFamily="@font/bowlby_one_sc" android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="249dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="220dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Enter Your Name Here"
                android:ems="10"
                android:id="@+id/enterName" android:textAlignment="center" android:textSize="18sp"
                android:fontFamily="@font/bowlby_one_sc" android:textColor="#FFFFFF"
                android:backgroundTint="#000000"
                android:shadowColor="#633838" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="348dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="109dp"/>
        <Button
                android:text="Click To Start!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Start"
                android:backgroundTint="#10DCBD" android:textColor="#FFFFFF"
                android:fontFamily="@font/bowlby_one_sc" android:textAlignment="center"
                app:cornerRadius="5in"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="442dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>