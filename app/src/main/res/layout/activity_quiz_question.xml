<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".QuizQuestionActivity" android:orientation="vertical"
        android:background="@drawable/gradient">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/Radio">
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#00020202"/>
        <TextView
                android:text="Question?"
                android:layout_width="match_parent"
                android:layout_height="133dp" android:id="@+id/Question" android:gravity="center"
                android:textSize="34sp" android:textColorHighlight="#1B4998"/>
        <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#00FFFFFF"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="176dp" android:gravity="center" android:id="@+id/Options">
            <RadioButton
                    android:text="Option 1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/o1" android:textSize="20sp"
                    android:baselineAligned="false" android:translationX=".3in" android:textColorHighlight="#1B4998"
                    android:textColor="#1B4998" android:buttonTint="#FF1B4998"/>
            <RadioButton
                    android:text="Option 2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/o2" android:textSize="20sp"
                    android:translationX=".3in" android:buttonTint="#FF1B4998" android:textColor="#1B4998"/>
            <RadioButton
                    android:text="Option 3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/o3" android:textSize="20sp"
                    android:translationX=".3in" android:textColor="#1B4998" android:buttonTint="#FF1B4998"/>
            <RadioButton
                    android:text="Option 4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/o4" android:textSize="20sp"
                    android:translationX=".3in" android:buttonTint="#FF1B4998" android:textColor="#1B4998"/>
        </RadioGroup>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center">
            <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="#00FFFFFF"/>
            <Button
                    android:text="Next"
                    android:layout_width="264dp"
                    android:layout_height="wrap_content" android:id="@+id/Next" android:background="#1B4998"/>
            <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="#00FFFFFF"/>
            <TextView
                    android:text="Progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/Progress_Bar" android:layout_weight="1"
                    android:textAlignment="center" android:visibility="visible" tools:visibility="visible"
                    android:textSize="20sp" android:background="#00FFFFFF" android:textColor="#1B4998"/>
            <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="#FFFFFF"/>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="267dp"
                    android:layout_height="26dp"
                    android:id="@+id/progressBar" android:layout_weight="1" android:progressTint="#00BCD4"
                    android:progressBackgroundTint="#1B4998"/>
            <View
                    android:id="@+id/divider8"
                    android:layout_width="match_parent"
                    android:layout_height="187dp"
                    android:background="?android:attr/listDivider"
                    android:backgroundTint="#00FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
